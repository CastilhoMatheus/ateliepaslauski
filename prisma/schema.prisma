generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Artwork {
  id        String  @id
  title     String
  price     Int
  size      String
  style     String
  image     String // Cloudinary publicId
  available Boolean @default(true)

  createdAt DateTime @default(now())
}
